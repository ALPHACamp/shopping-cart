<table>
  <tr>
    <th>#</th>
    <th>Order Number</th>
    <th>Customer</th>
    <th>Amount</th>
    <th>Payment status</th>
    <th>Shipping status</th>
    <th>Order Detail</th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.sn %></td>
      <td><%= order.user.email %></td>
      <td><%= order.amount %></td>
      <td><%= order.payment_status %></td>
      <td><%= order.shipping_status %></td>
      <td><%= link_to "Edit Detail", edit_admin_order_path(order) %></td>
    </tr>
  <% end %>
</table>
