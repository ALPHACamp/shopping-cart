<section id="my-cart">
  <h1>Cart</h1>
  <hr>
  <% current_cart.cart_items.each do |item| %>
  <div class="cart-item">
    <%= image_tag item.product.image %>
    <div class="cart-item-info">
      <h3><%= item.product.name %></h3>
      $ <%= item.product.price %><br>
      <div class="cart-item-adjust">
        <%= link_to '+', adjust_item_product_path(item.product, type: "add"), method: :post %>
        <%= item.quantity %>
        <%= link_to '-', adjust_item_product_path(item.product, type: "substract"), method: :post %>
        <%= button_to "Detele", remove_from_cart_product_path(item.product) %>
      </div>
    </div>
  </div>
  <% end %>
  <hr>
  <div class="subtotal">
    <p>SUBTOTAL</p>
    <p>$ <%= current_cart.subtotal %></p>
  </div>
</section>
