<% item = current_cart.find_item_by(@product) %>
<% if !item %>
  $('.product-<%= @product.id %>').remove();
<% else %>
  $('.cart-<%= @product.id %>-qty').text("<%= item.quantity %>");
  $('.item-<%= @product.id%>-total').text("<%= item.item_total %>");
<% end %>
$('.amount').text('<%= current_cart.subtotal %>')
